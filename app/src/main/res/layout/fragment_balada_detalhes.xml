<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <include
            android:id="@+id/progressIndeterminateBar"
            layout="@layout/progress_bar" />

        <LinearLayout
            android:id="@+id/detalhesBaladaContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_info_outline_black_18dp"
                android:gravity="center|start"
                android:drawablePadding="10dp"
                android:padding="20dp">
            </TextView>

            <View style="@style/Divider"/>

            <TextView
                android:id="@+id/site"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_web_black_18dp"
                android:gravity="center|start"
                android:drawablePadding="10dp"
                android:padding="20dp"
                android:autoLink="web">
            </TextView>

            <View style="@style/Divider"/>

            <TextView
                android:id="@+id/tipoMusica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_music_note_black_18dp"
                android:gravity="center|start"
                android:drawablePadding="10dp"
                android:padding="20dp">
            </TextView>

            <View style="@style/Divider"/>

            <TextView
                android:id="@+id/precoMedio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_attach_money_black_18dp"
                android:gravity="center|start"
                android:drawablePadding="10dp"
                android:padding="20dp">
            </TextView>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>